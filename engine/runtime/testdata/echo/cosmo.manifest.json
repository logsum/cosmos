{
  "name": "echo-agent",
  "version": "1.0.0",
  "description": "Minimal echo tool for testing",
  "entry": "index.js",
  "functions": [
    {
      "name": "echo",
      "description": "Echo back the input message",
      "params": {
        "message": { "type": "string", "required": true }
      },
      "returns": { "type": "object", "description": "Echoed message with timestamp" }
    }
  ],
  "permissions": {
    "fs:read": "deny"
  },
  "timeout": "10s"
}
